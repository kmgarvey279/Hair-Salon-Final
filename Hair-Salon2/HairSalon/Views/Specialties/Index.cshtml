@using HairSalon.Models;
@{
  Layout = "_Layout";
}

<div class="container">
  <h2>Our Specialties</h2>
  <hr />
  @if (@Model.Count != 0)
  {
    <ul>
    @foreach (Specialty specialty in Model)
    {
      <li><a href="/specialties/@specialty.GetId()">@specialty.GetName()</a></li>
    }
    </ul>
  }

  <p><a href="/specialties/new">Add a new specialty</a></p>
  <p><a href="/specialties/delete">Delete all specialties</a></p>
  <p><a href="/">Home</a></p>
</div>
