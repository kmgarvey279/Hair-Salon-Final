@using HairSalon.Models;
@{
  Layout = "_Layout";
}

<div class="container">
  <h2>Stylists</h2>
  <hr />
  @if (@Model.Count != 0)
  {
    @foreach (Stylist stylist in Model)
    {
      <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h3>
    }
  }

  <p><a href='/stylists/new'>Add a new stylist</a></p>
  <p><a href="/stylists/delete">Delete all stylists</a></p>
  <p><a href='/'>Back Home</a></p>
</div>
