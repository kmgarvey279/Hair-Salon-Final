@using HairSalon.Models;
@{
  Layout = "_Layout";
}

<div class="container">
  <h2>Our Clients</h2>
  <hr />
  @if (@Model.Count != 0)
  {
    <ul>
    @foreach (Client client in Model)
    {
      <li><a href="/clients/@client.GetId()">@client.GetName()</a></li>
    }
    </ul>
  }

  <p><a href="/specialties/delete">Delete all clients</a></p>
  <p><a href="/">Home</a></p>
</div>
